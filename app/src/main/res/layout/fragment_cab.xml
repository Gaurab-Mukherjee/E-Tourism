<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_cab"
    android:background="#313131">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:src="@drawable/ola_cab"
        android:background="@drawable/whitefreamcruve"/>

    <Button
        android:id="@+id/btn_ola"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView2"

        android:layout_marginTop="10dp"
        android:background="@drawable/btn_ola"
        android:shadowColor="#11A825"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="OLA"
        android:textColor="#FFFFFF"

        android:textSize="30sp"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:src="@drawable/bg_uber"
        android:background="@drawable/whitefreamcruve"
        android:layout_below="@+id/btn_ola"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/btn_uber"

        android:text="UBER"
        android:textColor="#FFFFFF"
        android:textSize="30sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_uber"
        android:shadowColor="#11A825"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerInParent="true"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>