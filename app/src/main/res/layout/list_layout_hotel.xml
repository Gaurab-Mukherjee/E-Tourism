<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#313131"
    android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:srcCompat="@drawable/sterling_dar_premium" />


        <TextView
            android:id="@+id/first_name_fetch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView4"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_below="@+id/first_name_fetch"
        android:layout_toRightOf="@id/imageView4"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"
        android:text="Type of room Selected-"/>


    <TextView
        android:id="@+id/hotel_details"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/type"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imageView4"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/checkin_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_below="@+id/hotel_details"
        android:layout_toRightOf="@id/imageView4"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"
        android:text="Check-In-"/>
    <TextView
        android:id="@+id/checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/hotel_details"
       android:layout_toRightOf="@+id/checkin_1"
        android:layout_marginLeft="30dp"
        android:textColor="#FFFFFF"
        android:text="TextView"/>
    <TextView
        android:id="@+id/checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"

        android:layout_below="@+id/checkin"
        android:layout_toRightOf="@id/imageView4"
        android:layout_marginLeft="5dp"
        android:textColor="#FFFFFF"
        android:text="Check-Out-"/>

    <TextView
        android:id="@+id/checkin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@id/checkin_1"
        android:layout_toRightOf="@+id/checkin_1"
        android:layout_marginLeft="30dp"
        android:textColor="#FFFFFF"
        android:text="TextView"/>

</RelativeLayout>