<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img_helpline">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/emergency_contact"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/lvhelpline"
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/whitefreamcruve" />

    <ImageButton
        android:id="@+id/inforhelp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="364dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/informationsystem" />


</RelativeLayout>