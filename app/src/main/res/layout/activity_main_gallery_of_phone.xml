<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_gallery_of_phone"
    android:background="#313131">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_gallery_phone"
        android:background="#212121"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:logo="@drawable/ic_arrow_back1"
        />
    <ImageView
        android:id="@+id/viewtakenphoto_phone"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/toolbar_gallery_phone"
        />
    <ImageButton
        android:id="@+id/open_gallery"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_below="@id/viewtakenphoto_phone"
        android:layout_centerInParent="true"
        android:background="@drawable/gallery_pic" />

</RelativeLayout>